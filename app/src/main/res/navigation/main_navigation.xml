<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/gamesFragment">

    <fragment
        android:id="@+id/statisticsFragment"
        android:name="com.example.graymatter.StatisticsFragment"
        android:label="fragment_statistics"
        tools:layout="@layout/fragment_statistics" />
    <fragment
        android:id="@+id/gamesFragment"
        android:name="com.example.graymatter.GamesFragment"
        android:label="fragment_games"
        tools:layout="@layout/fragment_games" >
        <action
            android:id="@+id/action_gamesFragment_to_reactionTestActivity"
            app:destination="@id/reactionTestActivity" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.graymatter.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/reactionTestActivity"
        android:name="com.example.graymatter.ReactionTestActivity"
        android:label="ReactionTestActivity" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.graymatter.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" />
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.graymatter.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" />
</navigation>