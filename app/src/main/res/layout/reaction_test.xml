<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:clickable="true">

    <!--    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />
-->

    <TextView
        android:id="@+id/reactionTestDescription"
        android:layout_width="419dp"
        android:layout_height="739dp"
        android:layout_centerHorizontal="true"
        android:background="#000000"
        android:clickable="true"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="Press to start the game"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/reactionTestLightning"
        android:layout_width="174dp"
        android:layout_height="242dp"
        app:layout_constraintBottom_toBottomOf="@+id/reactionTestDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.102"
        app:srcCompat="@drawable/ic_flash_white" />

    <ImageView
        android:id="@+id/reactionTestClose"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:clickable="true"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close_white" />

</androidx.constraintlayout.widget.ConstraintLayout>